@model List<ShopQuanAo.Data.CartItem>
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<form method="post" action="#">
    <input type="hidden" value="dY32yUjLzvsBE0Bj" name="form_key">

    <table class="data-table cart-table" id="shopping-cart-table">
        <thead class="hidden-phone">
            <tr class="first last">
                <th class="a-center first" rowspan="1"></th>

                <th rowspan="1">
                    <span class="nobr">Mã sản phẩm</span>
                </th>
                <th rowspan="1">
                    <span class="nobr">Tên sản phẩm</span>
                </th>
                <th rowspan="1">
                    <span class="nobr">Ảnh sản phẩm</span>
                </th>
                <th colspan="1" class="a-center">
                    <span class="nobr">Đơn giá</span>
                </th>
                <th class="a-center" rowspan="1">Số lượng</th>
                <th colspan="1" class="a-center">Thành tiền</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="first odd">
                    <td>
                        <h2 class="product-name">
                            <a href="#">@item.sanpham.MaSP</a>
                        </h2>
                    </td>
                    <td>
                        <h2 class="product-name">
                            <a href="#">@item.sanpham.TenSP</a>
                        </h2>
                    </td>
                    <td>
                        <img src=@Url.Content("~/Assets/LayOutIndex/images/preview/shop/" + item.sanpham.Anh) width="100" />
                    </td>
                    <td class="a-left">
                        <span class="cart-price"> <span class="price">@item.sanpham.GiaBan</span> </span>
                    </td>
                    <td class="a-center">
                        <input type="text" class="txtQuantity" data-id="@item.sanpham.MaSP" value="@item.SoLuong" />
                    </td>
                    <td class="a-left a-subtotal">
                        <span class="cart-price">
                            <span class="price">@(item.sanpham.GiaBan * item.SoLuong)</span>
                        </span>
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <br />

    <script type="text/javascript">decorateTable('shopping-cart-table')</script>
</form>

<div class="section group">
    <div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
        {
            <div class="form-group">
                <label>Người nhận</label>
                <input name="shipName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Điện thoại</label>
                <input name="shipMobile" class="form-control" />
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <input name="shipAdress" class="form-control" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input name="email" class="form-control" />
            </div>
            <button type="submit" class="btn">Gửi đơn hàng</button>
        }
    </div>
    </div>
</div>
<br />